package com.example.spring.service;
import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.spring.entity.Order1;
import com.example.spring.repository.OrderRepository;

@Service
public class OrderServiceImpl  implements OrderService{
	@Autowired
	OrderRepository orderRepository;
	 
	  @Override
	  public Order1 createOrder(Order1 order) {
	    return orderRepository.insertOrder(order);
	  }

	  @Override
	  public List<Order1> listAllOrders() {
	    return orderRepository.listAllOrders();
	  }
	  @Override
	  public Optional<Order1> selectOrderById(int id){
	    return orderRepository.selectOrderById(id);
	  }
	  @Override
	  public int deleteOrderById(int id) {
	    return orderRepository.deleteOrderById(id);
	  }
	  @Override
	  public int updateOrderById(int id, Order1 order) {
	    return orderRepository.updateOrderById(id, order);
	  }
	}

